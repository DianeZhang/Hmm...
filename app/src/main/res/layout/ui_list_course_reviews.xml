<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thinkers.hmm.ui.ListCourseReviews">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_course_reviews_title"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:singleLine="false"
        android:textSize="40dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_course_reviews_prof1"
        android:id="@+id/professor1Button"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentStart="true"
        android:longClickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_course_reviews_prof2"
        android:id="@+id/professor2Button"
        android:layout_alignTop="@+id/professor1Button"
        android:layout_toEndOf="@+id/professor1Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_course_reviews_prof3"
        android:id="@+id/professor3Button"
        android:layout_alignTop="@+id/professor2Button"
        android:layout_toEndOf="@+id/professor2Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_course_reviews_prof4"
        android:id="@+id/professor4Button"
        android:layout_alignTop="@+id/professor3Button"
        android:layout_toEndOf="@+id/professor3Button" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listCourseReviewsListView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/professor1Button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addNewReviewButton"
        android:layout_alignBottom="@+id/titleTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:focusable="true"
        android:src="@drawable/small_plus" />

</RelativeLayout>
