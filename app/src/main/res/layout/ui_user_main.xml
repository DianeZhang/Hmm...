<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thinkers.hmm.ui.UserMain">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/UserMain_welcome_msg"
        android:id="@+id/welcomeText"
        android:layout_alignParentTop="true"
        android:textSize="64sp"
        android:textColor="#ff000000"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcomeText"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:text="@string/UserMain_listcourse_label"
            android:id="@+id/coursesButton"
            android:textSize="36sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:clickable="false" />

        <Button
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:text="@string/UserMain_listfaculties_label"
            android:id="@+id/facultiesButton"
            android:textSize="36sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:clickable="false" />

        <Button
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:text="@string/UserMain_viewdrafts_label"
            android:id="@+id/draftsButton"
            android:textSize="36sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:clickable="false" />

        <Button
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:text="@string/UserMain_myreviews_label"
            android:id="@+id/reviewsButton"
            android:textSize="36sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:clickable="false" />

        <Button
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:text="@string/UserMain_settings_label"
            android:id="@+id/settingsButton"
            android:textSize="36sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:clickable="false" />
    </LinearLayout>

</RelativeLayout>
