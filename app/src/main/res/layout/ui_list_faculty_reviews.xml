<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thinkers.hmm.ui.ListFacultyReviews">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_faculty_reviews_title"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:singleLine="false"
        android:textSize="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_faculty_reviews_course1"
        android:id="@+id/course1Button"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentStart="true"
        android:longClickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_faculty_reviews_course2"
        android:id="@+id/course2Button"
        android:layout_alignTop="@+id/course1Button"
        android:layout_toEndOf="@+id/course1Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_faculty_reviews_course3"
        android:id="@+id/course3Button"
        android:layout_alignTop="@+id/course2Button"
        android:layout_toEndOf="@+id/course2Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_faculty_reviews_course4"
        android:id="@+id/course4Button"
        android:layout_alignTop="@+id/course3Button"
        android:layout_toEndOf="@+id/course3Button" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listFacultyReviewsListView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/course1Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_faculty_reviews_add"
        android:id="@+id/addNewReviewButton"
        android:layout_alignBottom="@+id/titleTextView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
