<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thinkers.hmm.ui.ListFaculties">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_faculties_title"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:singleLine="false"
        android:textSize="40dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchFacultyEditText"
        android:layout_below="@+id/titleTextView"
        android:layout_alignEnd="@+id/titleTextView"
        android:layout_alignParentStart="true"
        android:text="@string/list_faculties_search"
        android:password="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listFacultiesListView"
        android:layout_below="@+id/searchFacultyEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:footerDividersEnabled="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addNewFacultyButton"
        android:layout_alignBottom="@+id/titleTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:focusable="true"
        android:src="@mipmap/ic_launcher"
        android:longClickable="true" />

</RelativeLayout>
