<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thinkers.hmm.ui.UserInfo">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text= "@string/user_info_title"
        android:textSize="50dp"
        android:gravity="center"
        android:id="@+id/titleUserInfo"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:textColor="#010101" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleUserInfo">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelID"
                android:text="User ID:"
                android:textSize="36dp"
                android:layout_below="@+id/labelEmail"
                android:layout_centerHorizontal="true"
                android:textColor="#010101"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userID"
                android:layout_marginLeft="30dp"
                android:textSize="36dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelUsername"
                android:text="Username:"
                android:textSize="36dp"
                android:layout_below="@+id/titleUserInfo"
                android:layout_centerHorizontal="true"
                android:textColor="#010101"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                android:layout_marginLeft="30dp"
                android:textSize="36dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelEmail"
                android:text="User email:"
                android:textSize="36dp"
                android:layout_below="@+id/labelUsername"
                android:layout_centerHorizontal="true"
                android:textColor="#010101"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userEmail"
                android:layout_marginLeft="30dp"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelPass"
                android:text="User pass:"
                android:textSize="36dp"
                android:layout_below="@+id/labelEmail"
                android:layout_centerHorizontal="true"
                android:textColor="#010101"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userPass"
                android:layout_marginLeft="30dp"
                android:textSize="36dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelLastLogin"
                android:text="Last login:"
                android:textSize="36dp"
                android:layout_below="@+id/labelEmail"
                android:layout_centerHorizontal="true"
                android:textColor="#010101"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userLastLogin"
                android:layout_marginLeft="30dp"
                android:textSize="24dp" />
        </TableRow>

    </LinearLayout>

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_button"
        android:id="@+id/button"
        android:gravity = "center"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="59dp"
        android:layout_centerHorizontal="true" />-->


</RelativeLayout>
