<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thinkers.hmm.ui.AddNewFaculty">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text= "@string/add_new_faculty_title"
        android:textSize="50dp"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true" />


    <EditText
        android:layout_width="480dp"
        android:layout_height="500dp"
        android:id="@+id/usernameText"
        android:text= "entrer here"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="39dp"
        android:layout_centerHorizontal="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_faculty_submit_button"
        android:id="@+id/button"
        android:layout_marginStart="75dp"
        android:layout_below="@+id/usernameText"
        android:layout_alignStart="@+id/usernameText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_faculty_cancel_button"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignEnd="@+id/usernameText"
        android:layout_marginEnd="78dp" />

</RelativeLayout>
