<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thinkers.hmm.ui.ConstructReview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/ConstructReview_Title"
            android:id="@+id/textView6"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="555dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ConstructReview_TitleString"
                android:id="@+id/textView7"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:id="@+id/titleText"
                android:hint="@string/ConstructReview_TitleHint"
                android:layout_gravity="top|left"
                android:background="@android:drawable/dialog_holo_light_frame" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ConstructReview_Review"
                android:id="@+id/textView8"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contentText"
                android:text="@string/ConstructReview_ReviewHint"
                android:textSize="25dp"
                android:background="@android:drawable/alert_light_frame" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.22">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ConstructReview_SubmitButton"
                android:id="@+id/submitButton"
                android:layout_weight="0.33" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ConstructReview_SaveButton"
                android:id="@+id/saveButton"
                android:layout_weight="0.33" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ConstructReview_CancelButton"
                android:id="@+id/cancelButton"
                android:layout_weight="0.33" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
